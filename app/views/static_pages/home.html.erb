<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("static_pages.home.heading_micropost") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% end %>

<div class="center jumbotron">
  <h1><%= t(".home_heading") %></h1>
  <p><%= t(".home_content") %></p>
  <%= link_to t(".button_signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: "Rails logo"),
  "http://rubyonrails.org/" %>

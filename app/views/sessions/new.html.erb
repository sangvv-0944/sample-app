<% provide(:title, t('header.login')) %>
<h1><%= t("header.login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t("signin_page.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span> <%= t("signin_page.remember_me") %></span>
      <% end %>

      <%= f.submit t("header.login"), class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t("signin_page.question_text") %>
      <%= link_to t("static_pages.home.button_signup"), signup_path %>
    </p>
  </div>
</div>

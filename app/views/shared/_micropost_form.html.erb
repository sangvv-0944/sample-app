<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages",object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("micropost_page.placeholder_post"),
      class: "form-control" %>
  </div>
  <p>
  <%= f.submit t("micropost_page.post"), class: "btn btn-primary" %>
  </p>
  <span>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png',
      class: "form-control" %>
  </span>
<% end %>

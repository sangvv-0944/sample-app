<li id="micropost-<%= micropost.id %>">
<%= link_to gravatar_for(micropost.user, size: Settings.avatar_size_min) %>
<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
<span class="content">
  <%= micropost.content %>
  <%= image_tag micropost.picture.url if micropost.picture? %>
</span>
<span class="timestamp">
  <%= t("micropost_page.time_posted",
  time_ago: time_ago_in_words(micropost.created_at)) %>
  <%= link_to t("button_app.delete"), micropost, method: :delete,
  data: {confirm: t("users_page.confirm_delete")} %>
</span>
</li>
